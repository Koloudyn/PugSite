                                    option(value='1')   Name
                                    option(value='4')   Absolute stellar luminosity
                                    option(value='5')   Spectral class
                                <br>
                                span   descending?
                                input(type='checkbox' name='descThird')
                            div.center-text
                                input(type='button' value='Sorting')

